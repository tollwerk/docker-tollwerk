<fop version="1.0">
    <font-base>.</font-base>
    <accessibility>true</accessibility>
    <renderers>
        <renderer mime="application/pdf">
            <fonts>
                <font kerning="yes"
                      embed-url="fonts/Minimum.otf"
                      embedding-mode="subset">
                    <font-triplet name="Minimum" style="normal" weight="normal"/>
                </font>
                <font kerning="yes"
                      embed-url="fonts/FiraSans-Regular.otf"
                      embedding-mode="subset">
                    <font-triplet name="FiraSans" style="normal" weight="normal"/>
                </font>
                <font kerning="yes"
                      embed-url="fonts/FiraSans-Bold.otf"
                      embedding-mode="subset">
                    <font-triplet name="FiraSans" style="normal" weight="bold"/>
                </font>
                <font kerning="yes"
                      embed-url="fonts/FiraSans-Italic.otf"
                      embedding-mode="subset">
                    <font-triplet name="FiraSans" style="italic" weight="normal"/>
                </font>
                <font kerning="yes"
                      embed-url="fonts/FiraSans-BoldItalic.otf"
                      embedding-mode="subset">
                    <font-triplet name="FiraSans" style="italic" weight="bold"/>
                </font>
                <font kerning="yes"
                      embed-url="fonts/FiraMono-Regular.otf"
                      embedding-mode="subset">
                    <font-triplet name="FiraMono" style="normal" weight="normal"/>
                </font>
                <auto-detect/>
            </fonts>
            <pdf-ua-mode>PDF/UA-1</pdf-ua-mode>
        </renderer>
    </renderers>
</fop>
